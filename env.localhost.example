# ============================================
# LOCALHOST TESTING CONFIGURATION
# ============================================
# Copy this file to .env for local testing
# After testing, switch back to production settings

NODE_ENV=development
PORT=4000

# MongoDB Atlas Connection (keep your existing connection)
# Replace with your actual MongoDB URI
MONGO_URI=mongodb+srv://username:password@cluster.mongodb.net/tadbeer?retryWrites=true&w=majority

# JWT Secret (keep your existing secret)
JWT_SECRET=your_super_strong_jwt_secret_here_2024

# Admin Registration Secret Key
ADMIN_SECRET_KEY=TADBEER_ADMIN_2024_SECRET

# CORS Origin - LOCALHOST for testing
CORS_ORIGIN=http://localhost:3000

# SafePay Configuration (if using)
SAFEPAY_API_KEY=your_safepay_api_key
SAFEPAY_SECRET_KEY=your_safepay_secret_key

# ============================================
# EMAIL CONFIGURATION (Nodemailer)
# ============================================

# EMAIL_USER: The email account that SENDS all emails
EMAIL_USER=support@tadbeerresource.com

# EMAIL_PASSWORD: Password for EMAIL_USER account (must be Gmail App Password)
EMAIL_PASSWORD=Zia@2025Secure

# EMAIL_HOST: SMTP server
EMAIL_HOST=smtp.gmail.com

# EMAIL_PORT: SMTP port
EMAIL_PORT=587

# EMAIL_SECURE: false for port 587, true for port 465
EMAIL_SECURE=false

# ADMIN_EMAIL: Admin email addresses (optional, just for reference)
ADMIN_EMAIL=admin@tadbeerresource.com

# FRONTEND_URL: LOCALHOST for testing (used in email links)
FRONTEND_URL=http://localhost:3000

