# Production Environment Variables
NODE_ENV=production
PORT=4000

# MongoDB Atlas Connection (you'll get this from MongoDB Atlas)
MONGO_URI=mongodb+srv://username:password@cluster.mongodb.net/tadbeer?retryWrites=true&w=majority

# JWT Secret (generate a strong secret)
JWT_SECRET=your_super_strong_jwt_secret_here_2024

# Admin Registration Secret Key (REQUIRED for admin registration)
# This key must be provided during admin registration on the frontend
# Change this to a strong, unique secret key - keep it secure!
ADMIN_SECRET_KEY=TADBEER_ADMIN_2024_SECRET

# CORS Origin (your domain)
CORS_ORIGIN=https://tadbeerresource.com

# SafePay Configuration (if using)
SAFEPAY_API_KEY=your_safepay_api_key
SAFEPAY_SECRET_KEY=your_safepay_secret_key






