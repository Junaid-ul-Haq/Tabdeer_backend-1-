# Production Environment Variables
NODE_ENV=production
PORT=4000

# MongoDB Atlas Connection (you'll get this from MongoDB Atlas)
MONGO_URI=mongodb+srv://username:password@cluster.mongodb.net/tadbeer?retryWrites=true&w=majority

# JWT Secret (generate a strong secret)
JWT_SECRET=your_super_strong_jwt_secret_here_2024

# Admin Registration Secret Key (REQUIRED for admin registration)
# This key must be provided during admin registration on the frontend
# Change this to a strong, unique secret key - keep it secure!
ADMIN_SECRET_KEY=TADBEER_ADMIN_2024_SECRET

# CORS Origin (your domain)
CORS_ORIGIN=https://tadbeerresource.com

# SafePay Configuration (if using)
SAFEPAY_API_KEY=your_safepay_api_key
SAFEPAY_SECRET_KEY=your_safepay_secret_key

# ============================================
# EMAIL CONFIGURATION (Nodemailer)
# ============================================

# EMAIL_USER: The email account that SENDS all emails (the "from" address)
# This is the admin email that sends verification emails to users
EMAIL_USER=support@tadbeerresource.com

# EMAIL_PASSWORD: Password for EMAIL_USER account
# For Gmail: This is the password for the EMAIL_USER account
EMAIL_PASSWORD=Zia@2025Secure

# EMAIL_HOST: SMTP server (usually don't change for Gmail)
EMAIL_HOST=smtp.gmail.com

# EMAIL_PORT: SMTP port (usually don't change for Gmail)
EMAIL_PORT=587

# EMAIL_SECURE: false for port 587, true for port 465
EMAIL_SECURE=false

# ADMIN_EMAIL: Admin email addresses (not used for sending, just for reference)
# This is optional - emails are sent from EMAIL_USER to users
ADMIN_EMAIL=admin@tadbeerresource.com

# FRONTEND_URL: Your website URL (used in email links)
FRONTEND_URL=https://www.tadbeerresource.com






